{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ESNext",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "declaration": true,
        "isolatedModules": true,
        "noEmit": true,
        "outDir": "dist",
        "skipLibCheck": true,
    },
    "include": ["src"],
    "exclude": ["node_modules", "dist", "test", "**/*.test.ts"]
}